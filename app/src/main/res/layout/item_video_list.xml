<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_bakground_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_news_list"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="3dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_news_list"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:ellipsize="end"
            android:gravity="center_vertical"

            android:lines="3"
            android:text="text1"
            android:textColor="#383938"
            android:textSize="16dip" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/text_list_duration"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="Time: 4:30"
                android:textColor="#898989"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/text_list_date"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:text="Launch: 2012/12/06"
                android:textColor="#898989"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_list_views"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="7668 Views"
                android:textColor="#898989"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/text_list_like"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:text="566 Likes"
                android:textColor="#898989"
                android:textSize="12dp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>